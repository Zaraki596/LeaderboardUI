<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <include
            layout="@layout/custom_tb"
            android:id="@+id/custom_toolbar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <androidx.viewpager.widget.ViewPager
            android:layout_width="0dp"
            android:layout_height="110dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/custom_toolbar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/vp_leaderboard_img_slider"
    />
    <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
            android:id="@+id/vp_scroll_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:spi_dotSelectedColor="@color/light_blue_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vp_leaderboard_img_slider" android:layout_marginTop="8dp"/>

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.25"/>

    <!--Current User UI-->
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:background="@drawable/custom_black_border"
            app:layout_constraintTop_toTopOf="@+id/guideline" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline2"
            android:layout_marginTop="8dp" android:id="@+id/cardView">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="85."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_user_number" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp" android:textColor="#000" android:fontFamily="@font/roboto"/>
            <de.hdodenhof.circleimageview.CircleImageView android:layout_width="40dp"
                                                          android:layout_height="40dp"
                                                          android:src="@drawable/ic_blueheart"
                                                          app:civ_border_width="1dp"
                                                          app:civ_border_color="#494949"
                                                          app:layout_constraintStart_toEndOf="@+id/tv_user_number"
                                                          android:layout_marginStart="16dp"
                                                          android:id="@+id/civ_profile"
                                                          android:layout_marginTop="8dp"
                                                          app:layout_constraintTop_toTopOf="@+id/tv_user_name"
                                                          app:layout_constraintBottom_toBottomOf="@+id/tv_taps_left_desc"
                                                          android:layout_marginBottom="8dp"/>
            <TextView
                    android:text="Rohan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_user_name" android:textStyle="bold"
                    android:fontFamily="@font/roboto" android:textSize="18sp" android:textColor="#000"
                    app:layout_constraintBottom_toTopOf="@+id/tv_taps_left_desc"
                    app:layout_constraintTop_toTopOf="@+id/iv_heart"
                    app:layout_constraintStart_toEndOf="@+id/civ_profile" android:layout_marginStart="20dp"
                    app:layout_constraintVertical_bias="1.0" android:layout_marginTop="8dp"/>
            <TextView
                    android:text=" 4,002 Taps  left to win"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_taps_left_desc"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_num_of_taps"
                    app:layout_constraintStart_toEndOf="@+id/civ_profile" android:layout_marginStart="20dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_blueheart"
                    android:id="@+id/iv_heart" app:layout_constraintBottom_toTopOf="@+id/tv_num_of_taps"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            />
            <TextView
                    android:text="5,998"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_num_of_taps" android:textColor="#000"
                    app:layout_constraintEnd_toEndOf="@+id/iv_heart"
                    app:layout_constraintStart_toStartOf="@+id/iv_heart" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"/>
            <androidx.constraintlayout.widget.Group android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" android:id="@+id/group"
                                                    app:constraint_referenced_ids="tv_taps_left_desc,tv_user_name"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <TextView
            android:text="Leaders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_leaders_title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto" android:textSize="16sp" android:textColor="#000"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline2"/>
    <TextView
            android:text="Today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_daily_select" android:textColor="#000"
            android:textSize="16sp"
            android:fontFamily="@font/roboto" app:layout_constraintEnd_toStartOf="@+id/iv_drop_popmenu"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline2"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_arrow_drop_down"
            android:id="@+id/iv_drop_popmenu"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/tv_daily_select"
            app:layout_constraintTop_toTopOf="@+id/tv_daily_select" app:layout_constraintVertical_bias="0.0"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.35"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="427dp" android:layout_marginEnd="8dp"
            tools:listitem="@layout/rv_leaderboard_users_items"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:id="@+id/rv_all_users"/>

</androidx.constraintlayout.widget.ConstraintLayout>
